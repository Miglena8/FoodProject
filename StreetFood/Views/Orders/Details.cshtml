@model StreetFood.Data.Order

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Клиент:
        </dt>
        <dd class = "col-sm-10">
            @Model.Clients.FirstName   @Model.Clients.LastName
        </dd>
        <dt class = "col-sm-2">
            Поръчка за:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foods.Name)
        </dd>
        <dt class = "col-sm-2">
      Количество:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity) броя
        </dd>
        <dt class = "col-sm-2">
            Дата на поръчката:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateUpdate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
